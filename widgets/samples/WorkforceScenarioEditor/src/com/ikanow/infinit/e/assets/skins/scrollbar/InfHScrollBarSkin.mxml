<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	width="30"
	minHeight="35"
	alpha.disabled="0.5"
	alpha.inactive="0.5">

	<fx:Metadata>
		<![CDATA[ 
		[HostComponent("spark.components.HScrollBar")]
		]]>
	</fx:Metadata>

	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
		<s:State name="inactive" />
	</s:states>

	<s:Button id="track"
		height="16"
		width="100%"
		focusEnabled="false"
		bottom="6"
		left="6"
		right="6"
		skinClass="assets.skins.scrollbar.InfHScrollBarTrackSkin"
		tabEnabled="false" />

	<s:Button id="thumb"
		focusEnabled="false"
		bottom="6"
		buttonMode="true"
		skinClass="assets.skins.scrollbar.InfHScrollBarThumbSkin"
		tabEnabled="false"
		visible.inactive="false" />

</s:SparkSkin>
