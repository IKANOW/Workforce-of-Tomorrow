<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark">

	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>

	<!--- @private -->
	<s:Rect id="border"
		bottom="0"
		left="0"
		right="0"
		top="0"
		radiusX="{ getStyle( 'cornerRadius' ) }"
		radiusY="{ getStyle( 'cornerRadius' ) }">
		<s:stroke>
			<!--- @private -->
			<s:SolidColorStroke id="borderStroke"
				color="0x5380D0"
				alpha="0" />
		</s:stroke>
		<s:fill>
			<!--- @private -->
			<s:SolidColor id="bgFill"
				color="0xFFFFFF" />
		</s:fill>
		<s:filters>
			<s:DropShadowFilter 
				alpha=".5"
				angle="45"
				blurX="2"
				blurY="2"
				distance="2"
				inner="true" />
		</s:filters>
	</s:Rect>
</s:Skin>
