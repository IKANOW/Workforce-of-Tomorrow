<s:ItemRenderer
	xmlns:fx="http://ns.adobe.com/mxml/2009"
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<s:states>
		<s:State name="normal"/>
		<s:State name="hovered"/>
		<s:State name="selected" />
	</s:states>
	
	<s:layout>
		<s:VerticalLayout/>
	</s:layout>
	
	<s:HGroup verticalAlign="middle" paddingTop="5" paddingLeft="5" paddingBottom="3" width="100%" toolTip="{ data.description }">
		<s:VGroup width="100%">
			<s:Label text="{data.name}" fontSize="12" fontWeight="bold" color="0x000000" verticalAlign="middle"/>
			<s:Label text="creator: { data.creator}" fontSize="8" color="0x000000" verticalAlign="bottom"/>
		</s:VGroup>
		<s:VGroup verticalAlign="bottom" horizontalAlign="right" width="100%" height="100%">
			<s:Label text="{data.date}" fontSize="8" color="0x000000" verticalAlign="bottom"/>
		</s:VGroup>
	</s:HGroup>
	
</s:ItemRenderer>